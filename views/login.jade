extends layout

block content
	h1= title
	if(message)
		#{message}
	form(name="login", method="post",action="/login")
		div
			label Username:
			input(type="text", name="username")
		div
			label Password:
			input(type="password",name="password")
		div
			input(type="checkbox",name="rememberme") Remember me
		div
			input(type="submit", value="submit")